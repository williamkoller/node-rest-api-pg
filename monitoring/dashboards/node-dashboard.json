{
  "id": null,
  "uid": "node-metrics",
  "title": "Node.js - System Metrics",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "timeseries",
      "title": "CPU Usage",
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total[1m])",
          "legendFormat": "CPU",
          "refId": "A"
        }
      ],
      "datasource": "Prometheus",
      "id": 1,
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "Heap Used (MB)",
      "targets": [
        {
          "expr": "nodejs_heap_used_bytes / 1024 / 1024",
          "legendFormat": "Heap Used",
          "refId": "A"
        }
      ],
      "datasource": "Prometheus",
      "id": 2,
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "Resident Set Size (RSS)",
      "targets": [
        {
          "expr": "process_resident_memory_bytes / 1024 / 1024",
          "legendFormat": "RSS",
          "refId": "A"
        }
      ],
      "datasource": "Prometheus",
      "id": 3,
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "Garbage Collection Duration",
      "targets": [
        {
          "expr": "rate(nodejs_gc_duration_seconds_sum[5m])",
          "legendFormat": "GC Duration",
          "refId": "A"
        }
      ],
      "datasource": "Prometheus",
      "id": 4,
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 0
      }
    }
  ]
}
