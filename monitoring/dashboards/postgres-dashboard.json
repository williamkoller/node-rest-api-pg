{
  "id": null,
  "uid": "postgres-dashboard",
  "title": "PostgreSQL - DB Stats",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Active Connections",
      "targets": [
        {
          "expr": "pg_stat_activity_count{state=\"active\"}",
          "legendFormat": "Active",
          "refId": "A"
        }
      ],
      "datasource": "Prometheus",
      "id": 1,
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "Cache Hit Ratio",
      "targets": [
        {
          "expr": "(sum(rate(pg_stat_database_blks_hit[5m])) by (datname)) / (sum(rate(pg_stat_database_blks_hit[5m]) + rate(pg_stat_database_blks_read[5m])) by (datname))",
          "legendFormat": "{{datname}}",
          "refId": "A"
        }
      ],
      "datasource": "Prometheus",
      "id": 2,
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "Disk Read (blocks/sec)",
      "targets": [
        {
          "expr": "rate(pg_stat_database_blks_read[1m])",
          "legendFormat": "{{datname}}",
          "refId": "A"
        }
      ],
      "datasource": "Prometheus",
      "id": 3,
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "Transactions Committed",
      "targets": [
        {
          "expr": "rate(pg_stat_database_xact_commit[1m])",
          "legendFormat": "{{datname}}",
          "refId": "A"
        }
      ],
      "datasource": "Prometheus",
      "id": 4,
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 0
      }
    }
  ]
}
